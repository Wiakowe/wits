{% extends '::base_1column.html.twig' %}

{% set title = 'label_project_edit'|trans ~ ' - ' ~ project.name %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1>
        {{ title }}
    </h1>


<form class="form-horizontal" action="" method="POST">
    {{ form_widget(form) }}
    {%  if project.id %}
        {%  set label = 'label_edit' %}
    {%  else %}
        {%  set label = 'label_create' %}
    {%  endif  %}
    {% if project.logo is defined %}
    <div class="control-group">
        <div class="controls">
            <img class="footer_div brand_mini" src="{{ project.logo }}" />
        </div>
    </div>
    {% endif %}
    <div class="control-group">
        <div class="controls">
            <input class="btn btn-primary" type="submit" value="{{ label|trans }}"/>
        </div>
    </div>

</form>
{% endblock %}
