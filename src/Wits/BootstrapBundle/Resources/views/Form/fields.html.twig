{% block form_row %}
    {% spaceless %}
        <div class="control-group">
            {{ form_errors(form) }}
            <div class="control-label">
                {{ form_label(form) }}
            </div>
            <div class="controls">
                {{ form_widget(form) }}
            </div>
        </div>
    {% endspaceless %}
{% endblock form_row %}

