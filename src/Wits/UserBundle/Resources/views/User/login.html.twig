{% extends '::base_login.html.twig'%}
{% block body %}
<h1 class="">{% trans %}Conectar{% endtrans %}</h1>

<form class="form-horizontal " action="{{ path('wits.user.security.login_check') }}" method="post">
    {% if error %}
    <div class="alert alert-error">{{ error.message|trans }}</div>
    {% endif %}
    <div>
        <label for="username" >{% trans %}E-mail{% endtrans %}</label>
        <input type="email" id="username" name="_username" value="{{ last_username }}" placeholder="Email" />
    </div>

    <div>
        <label for="password" >{% trans %}ContraseÃ±a{% endtrans %}</label>
        <input type="password" id="password" name="_password" placeholder="Password"/>
    </div>

    <div>
        <br />
        <input type="submit" class="btn btn-primary" value="{% trans %}Entrar{% endtrans %}"/>
    </div>

    <div>
        <br />
        <a class="btn" href="{{ path('wits_user_register') }}">{% trans %}Registro{% endtrans %}</a>
    </div>

</form>

{% endblock %}
